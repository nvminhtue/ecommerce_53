<!-- title -->
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header"><%= t ".title_head" %></h1>
  </div>
</div>
<!-- /title -->
<!-------------- Table ----------------->
<div class="row">
<div class="col-sm-12">
<div class="panel panel-default mytable">
  <div class="panel-heading">
    <%= t ".title_table" %>
  </div>
<!-- /.panel-heading -->
<div class="panel-body">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover center-vetical">
    <tr>
      <th width="20px">Picture</th>
      <th>Name</th>
      <th width="20px">Quantity</th>
      <th>Price</th>
      <th width="200px">SubTotal</th>
    </tr>
    <tr>

    <% total = 0 %>
    
    <% @details_order.each do |detail| %>
    <% subtotal = detail.quantity*detail.price %>
    <% total += subtotal %>
    <tr>
      <td><%= image_tag detail.product.picture.url, class: "img-responsive" %></td>
      <td><%= detail.product.name %></td>
      <td><%= detail.quantity %></td>
      <td><%= detail.price %> VND </td>
      <td><%= subtotal %> VND </td>
    </tr>
    <% end %>
    
    <tr>
      <td colspan="4"></td>
      <td>Total :<%= total %> VND </td>
    </tr>

  </table>
</div>
</div>
</div>
</div>
</div>
