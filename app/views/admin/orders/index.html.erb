<!-- title -->
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header"><%= @title_head %></h1>
  </div>
</div>
<!-- /title -->
<!-------------- Table ----------------->
<div class="row">
<div class="col-sm-12">
<div class="panel panel-default mytable">
  <div class="panel-heading">
    ORDERS
  </div>
<!-- /.panel-heading -->
<div class="panel-body">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover center-vetical">
    <tr>
      <% columns = load_order_columns %>
      <% columns.each do |col| %>
        <th ><%= col.capitalize %></th>
      <% end %>
        <th width="80px">Details</th>
    </tr>
    <tr>
    <!-- table user -->
    <% @orders.each do |order| %>
    <% if (order.Pending? || order.Delivering?) %>
    <tr>
      <% for i in 0...columns.count do %>

        <% if columns[i] == "status" %>
          <%= render "admin/orders/order_status", order: order %>
        <% else %>
          <% if columns[i] == "created_at" %>
          <td style= "text-align: center"><%= order[columns[i]].strftime("%m-%d-%Y") %></td>
          <% else %>
          <td style= "text-align: center"><%= order[columns[i]] %></td>
          <% end %>
        <% end %>

      <% end %>

      <td>
        <%=link_to admin_detail_order_path(order) do %>
          <i class="fa fa-info-circle"></i> Details
        <% end %>
      </td>
    </tr>
    <% end %>
    <% end %>
    <!-- /table user -->
  </table>
</div>
  <%= will_paginate @orders %>
</div>
</div>
</div>
</div>
