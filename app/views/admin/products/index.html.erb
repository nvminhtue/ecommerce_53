<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">MANAGER PRODUCT</h1>
  </div>
</div>
<!-- /title -->
<!-------------- Table ----------------->
<div class="row">
<div class="col-sm-12">
<div class="panel panel-default mytable">
  <div class="panel-heading">
    PRODUCTS
  </div>
<!-- /.panel-heading -->
<div class="panel-body">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <% columns = load_product_columns %>
      <% columns.each do |col| %>
        <th><%= col.capitalize %></th>
      <% end %>
      <th width="80px">EDIT</th>
      <th width="100px">DELETE</th>
    </tr>
    <tr>
    <!-- table user -->
    <% @products.each do |p| %>
    <tr>
      <% for i in 0...columns.count do %>
      <td><%= p[columns[i]] %></td>
      <% end %>
      <td class="table-update">
        <%= link_to edit_admin_product_path(p) do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i> EDIT
        <% end %>
      </td>
      <td class="table-delete">
        <%= link_to admin_product_path(p), method: :delete, data: {confirm: "You sure?"} do %>
           <i class="fa fa-trash-o" aria-hidden="true"></i> DELETE
        <% end %>
      </td>
    </tr>
    <% end %>
    <!-- /table user -->
  </table>
<div>
  <%= link_to t(".add_new"), new_admin_product_path %>
</div>
</div>
  <%= will_paginate @products %>
</div>
</div>
</div>
</div>

