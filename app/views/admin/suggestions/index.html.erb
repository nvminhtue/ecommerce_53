<!-- title -->
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header"><%= t ".title_head" %></h1>
  </div>
</div>
<!-- /title -->
<!-------------- Table ----------------->
<div class="row">
<div class="col-sm-12">
<div class="panel panel-default mytable">
  <div class="panel-heading">
    <%= t ".title_table" %>
  </div>
<!-- /.panel-heading -->
<div class="panel-body">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover center-vetical">
    <tr>
      <% columns = load_suggest_columns %>
      <% columns.each do |col| %>
        <th><%= col.capitalize %></th>
      <% end %>
    </tr>
    <tr>
    <!-- table -->
    <% @suggestion.each do |s| %>
    <tr>
      <% for i in 0...columns.count do %>
        <% if columns[i] == "status" %>
          <!-- if true -->
          <td class="table-status">
            <%= render partial: "status", locals: {suggest: s} %>
          </td>
          <!-- /if true -->
        <% else %>
          <td><%= s[columns[i]] %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
    <!-- /table -->
  </table>
</div>
  <%= will_paginate @suggestion %>
</div>
</div>
</div>
</div>
