<%= render partial: "admin/block_top" %>
<%= render partial: "admin/nav_left" %>
<div class="col-sm-10 admin-right">
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">FORM</h1>
  </div>
</div>
<div class="row">
<div class="col-sm-4"></div>
<div class="col-sm-4">
  <%= form_for @user do |f| %>
    <%= render "shared/error_messages" %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-control" %>

    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    
    <br>
    <%= f.submit "Change", class: "btn btn-primary btn-block bt-edit" %>
  <% end %>
</div>
<div class="col-sm-4"></div>
</div>
<%= render partial: "admin/block_bot" %>
