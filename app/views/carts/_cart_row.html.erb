<%= form_for detail_order do |f| %>
<%= f.hidden_field :product_id, value: product.id %>
<td data-th="Product">
  <div class="row">
    <div class="col-sm-2 hidden-xs">
      <%= image_tag product.picture.url, class: "img-responsive"%>
    </div>
    <div class="col-sm-10">
      <h4 class="nomargin">
        <%= link_to product.name, product %>
      </h4>
      <p></p>
    </div>
  </div>
</td>
<td data-th="Price">
  <%= number_to_currency(product.price)%>
</td>
<td data-th="Quantity">
  <%= f.number_field :quantity, value: detail_order.quantity.to_i, class: "form-control text-center", min: 1 %>
</td>
<td data-th="Subtotal" class="text-center">
  <%= number_to_currency(detail_order.product.price * detail_order.quantity) %>
</td>
<td class="actions" data-th="">
    <!-- button -->
    <%= f.button :submit, class: "btn btn-info btn-sm" do %>
      <i class="fa fa-refresh"></i>
    <% end %>
    <%= link_to detail_order,
    {data: {confirm: t(".confirm",
    detail: detail_order.product.name)},
    method: :delete, remote: true, class: "btn btn-danger btn-sm"} do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
    <!-- /button -->
</td>
</tr>
<tr class="visible-xs">
<td class="text-center"><strong>
  <%= number_to_currency(detail_order.product.price * detail_order.quantity) %>
</strong></td>
</tr>
<% end %>

