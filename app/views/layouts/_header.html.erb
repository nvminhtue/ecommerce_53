<!-- body -->
<div id="imagebody">
<!-- Header -->
<div class="row mynav fix">
<div class="col-sm-1"></div>
<div class="col-sm-10 fix">
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle"
        data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t(".home"), root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <!-- Multi dropdown menu -->
        <li>
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-product-hunt" aria-hidden="true"></i>
            Product <span class="caret"></span>
          </a>
          <ul class="dropdown-menu multi-level">
          <% @array_categories.each do |category| %>
            <li><%= link_to category.name, products_path(category: category.id) %></li>
            <% child_category = children_categories(category.id) %>
            <% if child_category.any? %>
              <% child_category.each do |child| %>
                <% @array_categories.delete(child) %>
              <% end %>
              <%= render partial: "layouts/subcategory", locals: {categories: child_category.to_a} %>
            <% end %>
          <% end %>
          </ul>
        </li>
        <!-- /Multi dropdown menu -->
        <li>
          <% if logged_in? && current_user.admin? %>
          <%= link_to admin_root_path do %>
              <i class="fa fa-user-secret" aria-hidden="true"></i> <%= t(".admin") %>
            <% end %>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <%= link_to cart_path do %>
              <span class="glyphicon glyphicon-shopping-cart"></span> 
              <%= t(".cart") %>
              <% if current_order.detail_orders.size > 0 %>
                <span class="cart-count">
                  <%= current_order.detail_orders.size %>
                </span>
              <% end %>
            <% end %>
          </li>
          <li>
            <%= link_to history_path do %>
              <span class="fa fa-history"></span> <%= t(".history") %>
            <% end %>
          </li>
          <!-- <li><%#= link_to t(".sell"), upload_path %></li> -->
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user" aria-hidden="true"></i>
              <%= current_user.name %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".suggestion"), suggestions_path %></li>
              <li><%= link_to t(".update"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out"></span>
                    <%= t(".logout") %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to signup_path do %>
              <span class="glyphicon glyphicon-user"></span>
                <%= t(".signup") %>
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span>
                <%= t(".login") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</div>
<div class="col-sm-1"></div>
</div>
<!-- /Header -->
