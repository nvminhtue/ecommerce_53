<%= form_for detail_order do |f| %>
<%= f.hidden_field :product_id, value: product.id %>
<td data-th="Product">
  <div class="row">
    <div class="col-sm-2 hidden-xs">
      <%= image_tag product.picture.url, class: "img-responsive"%>
    </div>
    <div class="col-sm-10">
      <h4 class="nomargin">
        <%= link_to product.name, product %>
      </h4>
      <p></p>
    </div>
  </div>
</td>
<td data-th="Price">
  <%= number_to_currency(product.price, unit: "VND", format: "%n %u", precision: 0)%>
</td>
<td data-th="Quantity">
  <center><%= detail_order.quantity %></center>
</td>
<td data-th="Subtotal" class="text-center">
  <%= number_to_currency(detail_order.product.price * detail_order.quantity, unit: "VND", format: "%n %u", precision: 0) %>
</td>
</tr>
<tr class="visible-xs">
<td class="text-center"><strong>
  <%= number_to_currency(detail_order.product.price * detail_order.quantity, unit: "VND", format: "%n %u", precision: 0) %>
</strong></td>
</tr>
<% end %>

