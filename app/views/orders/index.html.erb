<% provide :title, t(".history") %>

<div class="row fix height-default-js">
<div class="col-sm-1"></div>
<div class="col-sm-10 fix">
  <!-- Page title -->
  <div class="page_header">
      <i class="fa fa-history" aria-hidden="true"></i> YOUR HISTORY
  </div>
  <div class="page_down">
    <i class="fa fa-caret-down" aria-hidden="true" style="font-size: 24px;"></i>
  </div>
  <!-- /Page title -->
  <!-- Order -->
  <div class="row">
  <div class="col-sm-12">
  <div class="panel panel-default mytable">
    <div class="panel-heading">
      Details
    </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover center-vetical">
      <tr >
        <th style="width:8%">Order Number</th>
        <th style="width:10%">Date</th>
        <th style="width:20%">Status</th>
        <th style="width:20%">Total Bill</th>
        <th style="width:10%">Details</th>
        <th style="width:10%">Cancle</th>
      </tr>
      <!-- row order -->
      <% @history_orders.each do |history| %>
        <% if history.detail_orders.present? && history.user_id == current_user.id%>
        <tr>
          <td style= "text-align: center"><%= history.id %></td>
          <td style= "text-align: center"><%= history.created_at.to_date.strftime("%d/%m/%Y") %></td>
          <td style= "text-align: center"><%= history.status%></td>
          <td style= "text-align: center"><%= number_to_currency(history.total) %></td>
          <td style= "text-align: center">
            <%=link_to order_path(history.id) do %>
              <i class="fa fa-info-circle"></i> Details
            <% end %>
          <td style= "text-align: center">
            <% unless history.Paid? %>
              <%= link_to order_path(history.id), method: :delete, data:{confirm: "Are you sure ?"} do %>
                <i class="fa fa-ban"></i> Cancle
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% end %>
      <!-- /row order -->
    </table>
  </div>
  </div>
  </div>
  </div>
  </div>
  <!-- /Order -->
</div>
<div class="col-sm-1"></div>
</div>
