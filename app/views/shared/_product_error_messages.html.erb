<% if @product.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t(".form") %>
      <%= t(:".error", count: @product.errors.count) %>
    </div>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
