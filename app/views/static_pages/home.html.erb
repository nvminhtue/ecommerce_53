<%= render partial: "carousel" %>

<!-- hot trend -->
<%= render partial: "recent_views/recently_viewed", locals: {objects: @hot, title: t("static_pages.home.trend")+" "+Date.today.year.to_s, icon: "fa fa-thumbs-o-up", url: "javascript:void(0)"} %>
<!-- /hot trend -->

<!-- products_updated -->
<% unless @products_updated.blank? %>
<div class="row pd-sort fix">
<div class="col-sm-1"></div>
<div class="col-sm-10 fix">
  <div class="prod-title">
    <%= link_to products_path do %>
        <i class="fa fa-tag" aria-hidden="true"></i> <%= t "static_pages.home.update" %>
    <% end %>
    <%= render "products/select_sort" %>
  </div>
  <div class="row product">
    <div class="col-sm-12">
      <% @products_updated.each do |product| %>
      <div class="col-sm-2 pi fix">
        <%= link_to product do %>
          <%= image_tag product.picture.url, class: "img" %>
          <div class="content">
            <div class="line"></div>
            <p class="citem"><%= number_to_currency(product.price)%></p>
            <h4 class="citem"><%= product.name %></h4>
          </div>
          <div class="topbg">&nbsp;</div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-sm-1"></div>
</div>
<% end %>
<!-- /products_updated -->

<%= render partial: "recent_views/recently_viewed", locals: {objects: @recently_products, title: t("static_pages.home.recently"), icon: "fa fa-history", url: recently_path} %>
<!-- /Product -->
