}


/* mobile css */
@media (max-width: 767px)
{
  .navbar-inverse .navbar-toggle {
    background-color: #333;
    border-color: #333;
  }

  .navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form {
    border-color: #e0e0e0;
  }

  .navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:focus, .navbar-inverse .navbar-nav>.open>a:hover {
    color: #fff;
    background-color: #1e5a77;
  }
  .navbar-inverse .navbar-nav .open .dropdown-menu>li>a {
    color: #ffffff;
  }
}

/* ---------------- home ---------------- */
/* product */
.product{
  margin: 0px;
  background-color: white;
}

.product .img{
  position: relative;
  display: inline-block;
  width: 100%;
  min-height: 270px
}

.product .content{
  position: absolute;
  top: 18px;
  left: 14px;
  z-index: 10;
}

.product .line{
  width: 80px;
  height: 3px;
  background-color: #fbb710;
  display: block;
  margin-bottom: 15px;
}

.product p{
    font-size: 16px;
    color: #6d6d6d;
    line-height: 1;
    margin-bottom: 5px;
    user-select: none;
}

.product h4{
  font-weight: 400;
  user-select: none;
}

.product .col-sm-12{
  padding: 0;
  margin: 0;
}

.topbg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: 0.4s;
}

.pi:hover .topbg{
  background-color: rgba(60, 60, 60, 0.7);
  color: white;
}

.pi:hover .citem{
  color: white;
}

.prod-title{
  background-color: #1a6e90;
  box-shadow: 0px -5px #349fd0;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  margin-top: 15px;
}

.prod-title a, .prod-title span{
  color: white;
  display: block;
  padding: 10px;
  font-size: 18px;
  font-family: "arial";
  text-align: center;
}

.pd-sort .prod-title a{
  color: white;
  display: inline-block;
}

.sort-left{
  width: 220px;
  padding: 5px;
  float: right;
}

.sort-left select{
  width: 150px;
  float: left;
}

.sort-left input{
  float: right;
}

/* carousel */
#myCarousel .item img{
  width: 100%;
  height: 400px;
  margin: auto;
  object-fit: none;
  object-position: 50% 50%;
}

.carousel-caption .khung{
  display: inline-block;
  padding: 0 15px;
  text-decoration: none;
  text-shadow: none;
  background-color: #000000a3;
  border: 1px solid #00000070;
  color: white;
  border-radius: 5px;
  box-shadow: 0px 10px 20px #2b2b2b;
}

.carousel-caption .khung h3{
  margin-top: 10px;
}

/* Footer */
.footer
{
  background-color: #0099cc;
  color: white;
  text-align: center;
  padding: 10px 5px;
  margin-top: 1px;
  font-family: "Helvetica Neue";
  font-size: 17px;
  box-shadow: 0px -10px 15px #00000045;
}

@keyframes mykf {
0% { color: #49ffe0;  }
25% { color: #b2ffae;  }
50% { color: #dafb61;  }
75% { color: #dfff00;  }
100% { color: #49ffe0;  }
}

.dongtue {
  font-weight:bold;
  animation: mykf 2s infinite;
}

